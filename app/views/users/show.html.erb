<h1><%= @user.name %>'s page</h1>

<%= button_to "Discover Movies", "/users/#{@user.id}/discover", method: :get %>
<hr/>

<div id="viewing_parties">

<h1>Viewing Parties</h1>

<ul>
  <% @user.parties.each do |party| %>
  <li>
    <img id="movie_poster" src="http://image.tmdb.org/t/p/w300<%= party.movie.poster_path %>" alt="<%= party.movie.title %> poster">
    <h2><a href="users/<%= @user.id %>/movies/<%= party.movie_id %>">Movie: <%= party.movie.title %></a></h2><br/>
    <h4>Party #<%= party.id %></h4><br/>
    <h4>Host: <%= User.find(party.user_id).name %></h4><br/>
    <h3>Date & Time: <%= party.format_start_time%></h3>
    <p id="<%= party.id %>-invited">Invited:
      <% party.users.each do |user| %>
        <% if user.name != @user.name %>
          <strong><%= user.name %></strong>
        <% else %>
          <%= user.name %>
        <% end %>
      <% end %>
    </p>
  </li>
<% end %>
</ul>
</div>

<%= link_to "Return to Home Page", "/" %>
